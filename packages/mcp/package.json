{
  "name": "@cadence/mcp",
  "version": "0.0.2",
  "description": "MCP (Model Context Protocol) server for Cadence - AI-powered note integration",
  "type": "module",
  "license": "MIT",
  "author": "Cadence Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/cadence-notes/cadence.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/cadence-notes/cadence/tree/main/packages/mcp#readme",
  "bugs": {
    "url": "https://github.com/cadence-notes/cadence/issues"
  },
  "keywords": [
    "cadence",
    "mcp",
    "model-context-protocol",
    "ai",
    "notes",
    "productivity"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cadence-mcp": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsup && tsc --build --emitDeclarationOnly --force",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@cadence/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
